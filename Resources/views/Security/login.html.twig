{% extends '@QcmCore/layout-login.html.twig' %}

{% block content %}
    <form action="{{ path('qcm_core_security_login_check') }}" method="post">
        <label for="username">{{ 'qcm_core.label.username'|trans }}</label>
        <input type="text" class="form-control input-sm chat-input" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">{{ 'qcm_core.label.password'|trans }}</label>
        <input type="password" class="form-control input-sm chat-input" id="password" name="_password" />
        {% if error %}
            <div class="form-group has-error">
                <div class="control-label col-sm-12">{{ 'qcm_core.bad_credentials'|trans }}</div>
            </div>
        {% endif %}
        <br />
        {{ actions.submit('qcm_core.button.confirm'|trans, 'btn-primary', 'fa-sign-in') }}
    </form>
{% endblock %}

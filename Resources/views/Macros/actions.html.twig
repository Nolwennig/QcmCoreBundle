{% macro add(url, message, glyphicon=true) %}
    {% import _self as actions %}

    <a href="{{ url }}" class="btn btn-sm btn-primary">
        {% if glyphicon == true %}
            {{ actions.glyphicon('glyphicon-plus') }}
        {% endif %}
        <span>{{ message is empty ? 'qcm_core.button.add'|trans : message }}</span>
    </a>
{% endmacro %}

{% macro show(url, message, glyphicon=null) %}
    {% import _self as actions %}

    <a href="{{ url }}" class="btn btn-sm btn-success">
        {% if glyphicon is not null %}
            {{ actions.glyphicon(glyphicon) }}
        {% endif %}
        <span>{{ message is empty ? 'qcm_core.button.show'|trans : message }}</span>
    </a>
{% endmacro %}


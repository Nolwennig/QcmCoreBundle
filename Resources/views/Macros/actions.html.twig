{% macro submit(value, class='btn-primary', glyphicon='glyphicon-save') %}
    <input type="submit" class="btn {{ class }}" value="{{ value is empty ? 'qcm_core.button.save'|trans : value }}">
{% endmacro %}

{% macro glyphicon(glyphicon) %}

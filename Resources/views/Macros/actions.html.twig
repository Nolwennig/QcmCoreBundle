{% endmacro %}

{% macro glyphicon(glyphicon) %}
    <i class="glyphicon {{ glyphicon }}"></i>
{% endmacro %}

{% macro title(text, glyphicon) %}
    {% import _self as actions %}
    <h4 class="row popover-title control-label">{{ actions.glyphicon(glyphicon) }} {{ text }}</h4>
{% endmacro %}


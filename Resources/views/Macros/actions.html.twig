{% macro submit(value, class='btn-primary', glyphicon='glyphicon-save', glyphbefore=false) %}
    {% import _self as actions %}

    <button type="submit" class="btn btn-sm {{ class }}">
        {% if glyphbefore == true %}
            {{ actions.glyphicon(glyphicon) }}
        {% endif %}
        {{ value is empty ? 'qcm_core.button.save'|trans : value }}
        {% if glyphbefore == false %}
            {{ actions.glyphicon(glyphicon) }}
        {% endif %}
    </button>
{% endmacro %}

{% macro next(url, message, glyphicon='glyphicon-arrow-right') %}
